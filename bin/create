#!/bin/bash
set -eu

if [ $# -ne 1 ]; then
  echo "[Error] Input contest name"
  exit 1
fi

template=$(cat << EOS
#include <bits/stdc++.h>
#define rep(i, n) for (int i = 0; i < n; i++)
using namespace std;
using ll = long long;
using P = pair<int, int>;

int main() {

}
EOS
)

mkdir $1
for i in a b c d; do
  echo -e "$template" > $1/$i.cpp
  touch $1/${i}1
  touch $1/${i}2
  touch $1/${i}3
done
